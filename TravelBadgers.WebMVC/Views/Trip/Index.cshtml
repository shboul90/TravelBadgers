@model IEnumerable<TravelBadgers.Models.TripListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Trip Overviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TripId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartCityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivalCityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OverallCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TripId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequestId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartCityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArrivalCityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OverallCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedUtc)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.TripId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TripId })
        </td>
    </tr>
}

</table>
